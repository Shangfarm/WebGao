@model lab04TT.Models.Order

@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h2 class="text-center text-success fw-bold">✅ Thanh toán thành công!</h2>
        <p class="text-center text-muted">Cảm ơn bạn đã đặt hàng. Dưới đây là chi tiết đơn hàng của bạn:</p>

        <table class="table table-hover align-middle">
            <thead class="table-light text-center">
                <tr>
                    <th>📦 Sản phẩm</th>
                    <th>💰 Giá</th>
                    <th>🔢 Số lượng</th>
                    <th>💵 Tổng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="text-center">
                        <td class="fw-bold">@item.Name</td>
                        <td class="text-success">@item.Price.ToString("N0") đ</td>
                        <td>@item.Quantity</td>
                        <td class="fw-bold">@((item.Price * item.Quantity).ToString("N0")) đ</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4 class="fw-bold">🛍️ Tổng tiền: <span class="text-success">@Model.TotalPrice.ToString("N0") đ</span></h4>
            <a href="/" class="btn btn-primary rounded-pill shadow-sm px-4">
                <i class="bi bi-house-door"></i> Quay lại trang chủ
            </a>
        </div>
    </div>
</div>
