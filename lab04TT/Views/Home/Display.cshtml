@model lab04TT.Models.Product

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">@Model.Name</h2>
                </div>
                <div class="card-body text-center">
                    <h3 class="text-success fw-bold">Price: @Model.Price.ToString("C")</h3>
                    <p class="text-muted">@Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow-sm" style="max-width: 250px;" />
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
