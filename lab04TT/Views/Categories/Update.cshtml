@model lab04TT.Models.Category

@{
    ViewData["Title"] = "Update Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-warning text-white text-center rounded-top-4">
                    <h2 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i>Update Category</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control rounded-3" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-warning px-4 rounded-pill shadow-sm">
                                <i class="fas fa-save me-1"></i> Update
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill shadow-sm">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-warning:hover, .btn-secondary:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }
</style>
