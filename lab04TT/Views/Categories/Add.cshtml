@model lab04TT.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white text-center py-3">
                    <h2 class="mb-0">Add Category</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Add" method="post">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                            <input asp-for="Name" class="form-control rounded-pill" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-sm fw-bold">
                                <i class="fas fa-plus-circle me-2"></i>Add
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm fw-bold">
                                <i class="fas fa-times-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn-success:hover {
        background-color: #28a745;
        transform: scale(1.05);
    }

    .btn-secondary:hover {
        transform: scale(1.05);
    }
</style>
