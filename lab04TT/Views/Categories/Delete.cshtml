@model lab04TT.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">Delete Category</h2>
                </div>
                <div class="card-body text-center">
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <p class="fs-5 text-danger fw-bold">
                            Are you sure you want to delete "<span class="text-dark">@Model.Name</span>"?
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger px-4">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
