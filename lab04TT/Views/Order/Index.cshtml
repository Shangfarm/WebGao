@model List<lab04TT.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <h2 class="text-center fw-bold">📦 Đơn hàng của tôi</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center rounded-4 mt-4">
            <p class="mb-0">Bạn chưa có đơn hàng nào.</p>
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <table class="table table-hover align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>🆔 Mã đơn</th>
                        <th>📅 Ngày đặt</th>
                        <th>💰 Tổng tiền</th>
                        <th>🔍 Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr class="text-center">
                            <td class="fw-bold">#@order.Id</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-success fw-bold">@order.TotalPrice.ToString("N0") đ</td>
                            <td>
                                <a asp-controller="ShoppingCart" asp-action="OrderSuccess" asp-route-orderId="@order.Id"
                                   class="btn btn-info btn-sm rounded-pill shadow-sm">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary rounded-pill shadow-sm px-4">
                <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
</div>
