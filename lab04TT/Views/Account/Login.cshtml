@model LoginViewModel

<h2 class="text-center">Đăng nhập</h2>
<form method="post" class="p-4 shadow rounded bg-light" style="max-width: 400px; margin: auto;">
    <div class="form-group position-relative mt-3">
        <label asp-for="Email" class="mb-2">Email</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" style="padding: 10px 15px;"><i class="fas fa-envelope"></i></span>
            </div>
            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" style="padding-left: 10px;" />
        </div>
    </div>
    <div class="form-group position-relative mt-4">
        <label asp-for="Password" class="mb-2">Password</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" style="padding: 10px 15px;"><i class="fas fa-lock"></i></span>
            </div>
            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" style="padding-left: 10px;" />
        </div>
    </div>
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary mx-2">Đăng nhập</button>
        <button type="button" class="btn btn-secondary mx-2" onclick="window.location.href='/'">Thoát</button>
    </div>
</form>

